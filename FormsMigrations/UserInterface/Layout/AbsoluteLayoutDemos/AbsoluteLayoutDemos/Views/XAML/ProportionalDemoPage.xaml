<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui-compat="clr-namespace:Microsoft.Maui.Controls.Compatibility;assembly=Microsoft.Maui.Controls"
             x:Class="AbsoluteLayoutDemos.Views.ProportionalDemoPage"
             Title="Proportional demo">
    <maui-compat:AbsoluteLayout>
        <BoxView Color="Blue"
                 maui-compat:AbsoluteLayout.LayoutBounds="0.5,0,100,25"
                 maui-compat:AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Green"
                 maui-compat:AbsoluteLayout.LayoutBounds="0,0.5,25,100"
                 maui-compat:AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Red"
                 maui-compat:AbsoluteLayout.LayoutBounds="1,0.5,25,100"
                 maui-compat:AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Black"
                 maui-compat:AbsoluteLayout.LayoutBounds="0.5,1,100,25"
                 maui-compat:AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label Text="Centered text"
               maui-compat:AbsoluteLayout.LayoutBounds="0.5,0.5,110,25"
               maui-compat:AbsoluteLayout.LayoutFlags="PositionProportional" />
    </maui-compat:AbsoluteLayout>
</ContentPage>
